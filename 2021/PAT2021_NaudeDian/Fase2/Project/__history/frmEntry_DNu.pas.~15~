unit frmEntry_DNu;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.jpeg, Vcl.Buttons, Vcl.ComCtrls;

type
  TfrmEntry = class(TForm)
    imgBackround: TImage;
    edtName: TEdit;
    lblHeading: TLabel;
    lblName: TLabel;
    pnlBegin: TPanel;
    Button1: TButton;
    lblDate: TLabel;
    lblTime: TLabel;
    procedure pnlBeginClick(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
   sGivenName:string;
  end;

var
  frmEntry: TfrmEntry;

implementation
uses
frmMain_DNu ;

{$R *.dfm}

procedure TfrmEntry.Button1Click(Sender: TObject);
begin
Application.Terminate;
 Application.MainForm.Close;

end;

procedure TfrmEntry.FormActivate(Sender: TObject);
begin
lblTime.Caption := FormatDateTime('hh:mm'    ,time);
lblDate.Caption := FormatDateTime('dd mmmm yyyy'    ,date);

end;

procedure TfrmEntry.FormClose(Sender: TObject; var Action: TCloseAction);
begin
Application.Terminate;
end;

procedure TfrmEntry.pnlBeginClick(Sender: TObject);
begin
sGivenName:= edtName.Text;
frmEntry.Hide;
frmMain.Show;

end;

end.
