unit frmEntry_DNu;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.jpeg, Vcl.Buttons, Vcl.ComCtrls, Vcl.MPlayer;

type
  TfrmEntry = class(TForm)
    imgBackround: TImage;
    edtName: TEdit;
    lblHeading: TLabel;
    lblName: TLabel;
    pnlBegin: TPanel;
    btnClose: TButton;
    lblDate: TLabel;
    lblTime: TLabel;
    MediaPlayerA: TMediaPlayer;
    procedure pnlBeginClick(Sender: TObject);
    procedure btnCloseClick(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
   sGivenName:string;
  end;

var
  frmEntry: TfrmEntry;

implementation
uses
frmMain_DNu ;

{$R *.dfm}

procedure TfrmEntry.btnCloseClick(Sender: TObject);
begin
Application.Terminate;
 Application.MainForm.Close;

end;

procedure TfrmEntry.FormActivate(Sender: TObject);
begin
MediaPlayerA.FileName := 'Zootycoon.wav' ;
//MediaPlayerA.FileName := 'K:\PAT2021_NaudeDian\Fase2\Media\Music\Zootycoon.wav' ;
//MediaPlayerA.FileName := 'C:\Users\Jan\Documents\Dian\Delphi\Files\PAT2021_NaudeDian\Fase 2\Media\Music\Zootycoon.wav' ;

MediaPlayerA.Open ;
MediaPlayerA.Play  ;

sGivenName := edtName.Name;
lblTime.Caption := FormatDateTime('hh:mm'    ,time);
lblDate.Caption := FormatDateTime('dd mmmm yyyy'    ,date);

end;

procedure TfrmEntry.FormClose(Sender: TObject; var Action: TCloseAction);
begin
Application.Terminate;
end;

procedure TfrmEntry.pnlBeginClick(Sender: TObject);
begin
sGivenName:= edtName.Text;
if not(sGivenName = '') then
begin


MediaPlayerA.Close ;
frmEntry.Hide;
frmMain.Show;

end
else
ShowMessage('Enter your Name');


end;

end.
